{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": [
            "ES6",
            "ES2015",
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "sourceMap": true,
        "target": "ESNext"
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "test",
        "templates"
    ]
}
